<h1> Post list for a given user </h1>

<% @posts.each do |post| %>
    <div class="post-container">
        <div class="post-title">
            <h2> <%= post.title %> </h2>
        </div>
        <div class="post-text">
            <p> <%= post.text %> </p>
        </div>
        <div class="post-info">
            <p> Comments: <%= post.comments_counter %> - Likes: <%= post.likes_counter%> </p>
        </div>
    </div>
<% end %>
