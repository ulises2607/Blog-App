<h2> Create comment </h2>
<%= form_with model: @comment, url: user_post_comments_path(@user, @post), local: true do |form| %>
  <div>
    <%= form.label :text%>
    <%= form.text_field :text%>
  </div>
  <div>
    <%= form.submit  %>
  </div>

<% end %>

<%= link_to 'Back', user_post_path(@user, @post) %>
