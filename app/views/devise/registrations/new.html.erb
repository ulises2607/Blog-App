<h2 class="signup-title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "custom-input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "custom-input" %>
  </div>

  <div class="field">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 16, placeholder: "Full Name", class: "custom-input", required: true %>
  </div>

  <div class="field">
    <%= f.label :bio, class: "form-label" %>
    <%= f.text_field :bio, autofocus: true, autocomplete: "bio", placeholder: "Bio", class: "custom-input", required: true %>
  </div>

  <div class="field">
    <%= f.hidden_field :photo, value: "https://previews.123rf.com/images/afe207/afe2071811/afe207181100114/112623425-imagen-de-perfil-masculino-s%C3%ADmbolo-de-icono-de-avatar-de-perfil-de-silueta-con-gafas.jpg" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "custom-button" %>
    <%= link_to "Back to Home", root_path, class: "custom-button back-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
