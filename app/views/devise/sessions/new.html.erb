<div class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="md-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "custom-input" %>
    </div>

    <div class="field-login">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "custom-input" %>
    </div>

    <div class="actions-login">
      <%= f.submit "Log in", class: "custom-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
